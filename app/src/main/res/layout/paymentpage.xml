<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:id="@+id/layout1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PAYMENTS"
                android:textAlignment="center"
                android:textSize="50dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="386dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/layout1"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/americano" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Cafe Americano"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Quantity (1) " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:id="@+id/layout3"
            android:layout_below="@id/layout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="150dp"
                android:text="Checkout Price - Rs. 150/-"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout3">
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="80dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="386dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/layout4"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/lattecafe" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Cafe Latte"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Quantity (1) " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:id="@+id/layout6"
            android:layout_below="@id/layout5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="150dp"
                android:text="Checkout Price - Rs. 250/-"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout6">
            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="80dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:id="@+id/layout8"
            android:layout_below="@id/layout7">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Add your Address"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/layout9"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/layout8">

            <Button
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Submit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layout10"
            android:layout_marginTop="20dp"
            android:layout_below="@id/layout9">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Pay by - "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="gpay"
                android:textColor="#000000"
                android:backgroundTint="#FFFF00"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="phonepay"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#008000"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="paytm"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#0000FF"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>